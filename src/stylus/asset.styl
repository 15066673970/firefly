// 资产界面的样式表
@require '~@/stylus/app.styl'
.assets
  border-radius: 10px    

.assets-row
  overflow: hidden
  position: relative
  
  background: $primarycolor.gray
  

  .myassets-li
    position: relative
    z-index: 2
    padding: 5px 5px
    border-radius: 5px 5px 5px 5px
    background: $secondarycolor.gray
  
    width: 100%
    
    .myassets-wrapper
      
      .myassets
        margin-top: 5px
        .myassets-name
          font-size: 16px
        .myassets-issuer
          color: $secondarycolor.font
          font-size: 14px
      .myassets-balance
        text-align: right
        color: $secondarycolor.font
        .balance
          color: $primarycolor.green
          font-size: 16px
          padding-right: 10px
      .myassets-reserve
        text-align: right  
        color: $secondarycolor.font
        .balance
          padding-right: 10px
.myassets-balance.third
  height: 100%
  padding-top: 5px
.assets-row
  border-bottom: 1px solid $secondarycolor.font
.assets-row:last-child
  border-bottom: 0px
.operate-box 
  position: absolute
  z-index: 1
  height: 100%
  right: 0
  top: 0
  display: flex
  .send
  .receive
  .del
    display: flex
    justify-content: center
    align-items: center
    background-color: $secondarycolor.green
    color: $primarycolor.font
    padding: 0 12px
  .receive
    border-left: 1px solid $secondarycolor.gray
  .del
    background-color: $secondarycolor.red
    border-right: 1px solid $secondarycolor.gray

