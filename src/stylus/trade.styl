@require '~@/stylus/color.styl'
@css{
  ::-webkit-scrollbar{
    width:0px
  }
}
.page
  background: $primarycolor.gray
  color: $primarycolor.font
  overflow: hidden
  .content
    /*padding: 10px 10px*/

  .menu-wrapper
    background: $primarycolor.green
    height: 43px
    margin-top: -1px
    width: 100%
    .menu-ul
      overflow: hidden
      padding-left: 0
      display:block
      white-space:nowrap
      overflow:auto
      position: absolute
      transition: transform .4s ease
      /*top: 50px*/
      .menu-li
        list-style: none
        display: inline-block
        /*color: $secondarycolor.font*/
        padding-left: 10px
        padding-right: 10px
        /*height: 53px*/
        width: 160px
        /* line-height: 55px */
        text-align: center
        font-size: 20px
        opacity:0.5
      .menu-li.active
        border-bottom: 2px solid $primarycolor.font
        color: $primarycolor.font
        opacity:1
.pair-wrapper
  display: flex
  .pair-from
    flex: 2
    overflow: hidden
    .pair-from-code
      font-size: 16px
      /*height: 36px
      line-height: 36px*/
    .pair-from-issuer
      font-size: 14px
      height: 19px
      line-height: 19px
  .pair-to
    flex: 2
    overflow: hidden
    .pair-to-code
      font-size: 16px
      /*height: 36px
      line-height: 36px*/
    .pair-to-issuer
      font-size: 14px
      height: 19px
      line-height: 19px
  .pair-icon
    flex: 1
    padding-top: 10px
    .material-icons
      font-size: 24px
.pair-show
  display: flex
  width: 100%
  text-align: center
  font-size: 14px
  padding-top: 10px
  padding-bottom: 10px
  .pair-from
    flex: 2
    .code 
      font-size: 16px
    .issuer
      color: $secondarycolor.font
  .pair-icon
    flex: 1
    .material-icons
      color: $primarycolor.green
      font-size: 32px
      padding-top: 8px
  .pair-to
    flex: 2
    .code
      font-size: 16px
    .issuer
      color: $secondarycolor.font
.btn-group
  margin-top: 10px
  margin-bottom: 5px
  display: flex
  justify-content space-around
.btn-buy
.btn-sell
  width: 45%
  padding: 0px 0px
  margin: 0px 0px
  height: 32px
  font-size: 16px
.btn-sell
  margin-left: 0.5%
.available
  display: flex
  .from
  .to 
    // flex: 1
    color: $secondarycolor.font
    font-size: 12px
    padding-left: 2px
    display flex
    justify-content flex-start
    flex-grow 0
  .to
    justify-content flex-end
.price
  text-align: center
  .num
    font-size: 24px
	  color: $primarycolor.green
  .code
    font-size: 20px

.tradepairs-wrapper
  background: $primarycolor.green
  height: 42px
  margin: 0 !important
  min-height:42px !important
  .swiper-slide 
    width: 140px;
    height: 100%;
    opacity: 0.6;
  .swiper-slide-active 
    opacity: 1;
    font-weight 600

.gallery-content 
   width: 100%;

.tradebox
  width:100%
  display flex
  flex-direction column
  align-items center 
  .input-group
    .input-group_input
      min-height 30px !important


input[type=number] 
  -moz-appearance:textfield

input[type=number]::-webkit-outer-spin-button
input[type=number]::-webkit-inner-spin-button 
  -webkit-appearance: none;
  margin: 0;

