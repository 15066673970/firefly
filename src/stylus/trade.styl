@require '~@/stylus/color.styl'
@css{
  ::-webkit-scrollbar{
    width:0px
  }
}

.footer-btns
  position: fixed
  bottom: 0
  left: 0
  right: 0
  background: $primarycolor.gray
.btn-flex
  padding: 5px 8px
.btn-buy
.btn-sell
  width: 100%
  padding: 0px 0px
  margin: 0 0
  height: 32px
  font-size: 16px

input[type=number] 
  -moz-appearance:textfield

input[type=number]::-webkit-outer-spin-button
input[type=number]::-webkit-inner-spin-button 
  -webkit-appearance: none;
  margin: 0;


